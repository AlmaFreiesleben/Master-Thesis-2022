import matplotlib.pyplot as plt
from numpy import arccos, sqrt, sin, cos, pi

xs = []
ys = []
zs = []
N = 900
L = sqrt(N*pi)

for k in range(1,N):
    h_k = 1-((2*k-1)/N)
    phi = arccos(h_k)
    theta = L*phi

    #convert from spherical to cartesian
    x = 2.5 * sin(phi) * cos(theta)
    y = 2.5 * sin(phi) * sin(theta)
    z = 2.5 * cos(phi)

    xs.append(x)
    ys.append(y)
    zs.append(z)

fig = plt.figure()
ax = fig.add_subplot(projection='3d')
ax.scatter(xs, ys, zs, color='m', s = 2)
#ax.plot(xs, ys, zs, color='darkcyan')
ax.axis('off')
plt.savefig("spiral-dot.png")
plt.show()